@model Vidly.Models.Customer


@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-check">
        @Html.LabelFor(m => m.BirthOfDate)
        <label for="BirthDate">Date Of Birth</label>
        @Html.TextBoxFor(m => m.BirthOfDate, new { @class = "form-control" })
    </div>
    <br /><div class="form-check">
        @Html.LabelFor(m => m.IsSubscribedToNewsletter)
        @Html.CheckBoxFor(m => m.IsSubscribedToNewsletter, new { @class = "form-control" })
    </div>
    <br />
    <div class="form-check">
        @Html.CheckBoxFor(m => m.IsSubscribedToNewsletter) Subscribed to Newsletter?
    </div>
}