@{
    if (!Model.Any())
    {
        <p>We don't have any Movies yet.'</p>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>MovieType</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>

                        <td>
                            @Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.ID }, null)
                        </td>
                        <td>@movie.MovieType</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

